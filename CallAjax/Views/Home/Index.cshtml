<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label>Nome</label>
            <input type="text" id="txtNome" class="form-control" />
        </div>
        <div class="form-group">
            <label>Sobrenome</label>
            <input type="text" id="txtSobrenome" class="form-control" />
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group">
            <input type="button" class="btn btn-primary" value="Teste Ajax" id="btnTeste" />
            <input type="button" class="btn btn-primary" value="Teste Ajax Get" id="btnTesteGet" />
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>

<script>
    $("#btnTeste").click(function () {
        var nome = $("#txtNome").val();
        var sobrenome = $("#txtSobrenome").val();
        $.ajax({
            url: "/Home/JsonTeste",
            dataType: "json",
            type:"POST",
            data: { Nome: nome, Sobrenome: sobrenome }
        }).done(function (result) {
            if (result != null) {
                alert(result.Message);
            }
        });
    });

    $("#btnTesteGet").click(function () {
        $.ajax({
            url: "/Home/JsonTesteGetData",
            dataType: "json",
            type: "POST"
        }).done(function (result) {
            if (result != null) {
                $("#txtNome").val(result.Nome);
                $("#txtSobrenome").val(result.Sobrenome);
            }
        });
    });
</script>